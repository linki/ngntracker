<% title "Log in" %>

<p>Don't have an account? <%= link_to "Sign up!", signup_path %></p>

<% semantic_form_for @user_session do |f| %>
  <% f.inputs do %>
    <%= f.input :login %>
    <%= f.input :password %>
  <% end %>
  <% f.buttons do %>
    <%= f.commit_button 'Log in' %>
  <% end %>  
<% end %>