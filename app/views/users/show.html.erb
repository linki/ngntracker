<% title h(@user.name) %>

<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first"><%= link_to 'List', users_path  %></li>
      <li><%= link_to 'New', new_user_path %></li>
      <li class="active"><%= link_to 'Show', @user %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">            
    <h2 class="title"><%= yield(:title) %></h2>
    <div class="inner">
      <p>
        <strong>Name:</strong>
        <%=h @user.name %>
      </p>
      <p>
        <strong>Email:</strong>
        <%=h @user.email %>
      </p>
      <p>
        <%= link_to "Edit", edit_user_path(@user) %> |
        <%= link_to "Destroy", @user, :confirm => 'Are you sure?', :method => :delete %> |
        <%= link_to "View All", users_path %>
      </p>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>

