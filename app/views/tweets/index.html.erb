<% title "All Tweets" %>

<div class="block">
  <div class="secondary-navigation">
    <ul>
      <li class="first active"><%= link_to 'List', tweets_path %></li>
      <li><%= link_to 'New', new_tweet_path %></li>
    </ul>
    <div class="clear"></div>
  </div>          
  <div class="content">          
    <h2 class="title"><%= yield(:title) %></h2>
    <div class="inner">
      <ul class="list">
        <% @tweets.each do |tweet|%>
          <li>
            <div class="left">
              <a href="#"><img class="avatar" src="images/avatar.png" alt="avatar" /></a>
            </div>
            <div class="item">
              <p><strong><%= tweet.user.name if tweet.user %></strong></p>
              <p><%= tweet.text %></p>
            </div>
          </li>
        <% end %>
      </ul>
      <div class="actions-bar">
        <div class="actions">
        </div>        
      
        <div class="clear"></div>
      </div>
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>