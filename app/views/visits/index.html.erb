<% title "Visits" %>

<table>
  <tr>
    <th>User</th>
    <th>Ticket</th>
  </tr>
  <% for visit in @visits %>
    <tr>
      <td><%=h visit.user_id %></td>
      <td><%=h visit.ticket_id %></td>
      <td><%= link_to "Show", visit %></td>
      <td><%= link_to "Edit", edit_visit_path(visit) %></td>
      <td><%= link_to "Destroy", visit, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Visit", new_visit_path %></p>
